@model MeetingInfo
@{ 
    Layout = "_Layout"; 
    ViewBag.Title = "Toplantı Başvuru";
}
<main class="text-center">
    <h1 class="h4">@ViewBag.Selamlama</h1>
    <p>Toplantı Katılım Durumunuzu Bildiriniz.</p>
    
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Model.Location</li>
            <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm") Tarihinde Gerçekleşecek</li>
            <li class="list-group-item">@(Model.NumberOfPeople+1) Katılımcı</li>
        </ul>
    </div>
    
    <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>
</main>